@model CollegeEventManager.Models.EventModel

@{
    ViewData["Title"] = "Delete Event";
}

<div class="card border-danger">
    <div class="card-header bg-danger text-white">
        <h3 class="mb-0">Delete Event</h3>
    </div>
    <div class="card-body">
        <h5>Are you sure you want to delete this event?</h5>
        
        <div class="mt-4">
            <dl class="row">
                <dt class="col-sm-3">Title</dt>
                <dd class="col-sm-9">@Model.Title</dd>
                
                <dt class="col-sm-3">Date</dt>
                <dd class="col-sm-9">@Model.Date.ToString("yyyy-MM-dd HH:mm")</dd>
                
                <dt class="col-sm-3">Venue</dt>
                <dd class="col-sm-9">@Model.Venue</dd>
                
                <dt class="col-sm-3">Registrations</dt>
                <dd class="col-sm-9">@(Model.Registrations?.Count ?? 0)</dd>
            </dl>
        </div>
        
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> This will also delete all registrations for this event. This action cannot be undone!
        </div>
        
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" name="id" value="@Model.EventId" />
            <div class="mt-4">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
