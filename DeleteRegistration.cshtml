@model CollegeEventManager.Models.RegistrationModel

@{
    ViewData["Title"] = "Delete Registration";
}

<div class="card border-danger mb-4">
    <div class="card-header bg-danger text-white">
        <h3 class="mb-0">Delete Registration</h3>
    </div>
    <div class="card-body">
        <h5>Are you sure you want to delete this registration?</h5>
        
        <div class="mt-3">
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>
                
                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>
                
                <dt class="col-sm-3">Phone</dt>
                <dd class="col-sm-9">@Model.Phone</dd>
                
                <dt class="col-sm-3">Event</dt>
                <dd class="col-sm-9">@ViewBag.EventTitle</dd>
            </dl>
        </div>
        
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> This action cannot be undone!
        </div>
        
        <form asp-action="DeleteRegistrationConfirmed" method="post">
            <input type="hidden" name="id" value="@Model.RegistrationId" />
            <input type="hidden" name="eventId" value="@Model.EventId" />
            <div class="mt-4">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Details" asp-route-id="@Model.EventId" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>